{
    "compilerOptions": {
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "target": "ES2016",
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "exclude": [
        "./node_modules",
        "./dist/**/*"
    ],
    "include": [
        "./src/**/*",
        "./environment.d.ts",
    ],
}
