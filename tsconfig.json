{
    "compilerOptions": {
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "dist",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "target": "ESNext",
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts",
        "environment.d.ts"
    ]
}
